{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2022"],
		"module": "NodeNext",

		"moduleResolution": "NodeNext",
		"verbatimModuleSyntax": true,
		"resolveJsonModule": true,

		"strict": true,
		"noImplicitOverride": true,
		"exactOptionalPropertyTypes": true,
		"forceConsistentCasingInFileNames": true,

		"declaration": true,
		"outDir": "./dist",

		"skipLibCheck": true
	}
}
