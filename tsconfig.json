{
  "compilerOptions": {
    "lib": ["es2021"],
    "module": "NodeNext",
    "target": "es2021",

    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext",
    "verbatimModuleSyntax": true,
    "declaration": true,
    "exactOptionalPropertyTypes": true,

    "outDir": "./dist"
  }
}
