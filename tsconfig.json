{
  "compilerOptions": {
    "lib": ["es2021"],
    "module": "commonjs",
    "target": "es2021",

    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "importsNotUsedAsValues": "error",
    "declaration": true,
    "exactOptionalPropertyTypes": true,

    "outDir": "./dist"
  }
}
